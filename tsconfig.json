{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "newLine": "lf",
    "strict": true,
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "esModuleInterop": false,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
